@page
@model GuildMembersOverview.Pages.Characters.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Character</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Class)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Class)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Role)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.RaidAttendances)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>RaidDay</th>
                    <th>SignedUp</th>
                    <th>Attendance</th>
                    <th>AttendanceCount</th>
                </tr>
                @foreach (var item in Model.Character.RaidAttendances)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RaidDay)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SignedUp)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Attendance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttendanceCount)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.LootInfos)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Received</th>
                    <th>Item</th>
                </tr>
                @foreach (var item in Model.Character.LootInfos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Received)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Character?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
