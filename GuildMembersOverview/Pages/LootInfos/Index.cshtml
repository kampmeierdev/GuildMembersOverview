@page
@model GuildMembersOverview.Pages.LootInfos.IndexModel

@{
    ViewData["Title"] = "LootInfos";
}

<h1>Loot Infos</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LootInfos[0].Character)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LootInfos[0].Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LootInfos[0].Received)
            </th>          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LootInfos)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Character.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Received)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
