@page
@model GuildMembersOverview.Pages.RaidAttendances.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RaidAttendance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RaidAttendance.ID" />
            <div class="form-group">
                <label asp-for="RaidAttendance.Character" class="control-label"></label>
                <select asp-for="RaidAttendance.CharacterID" class="form-control" asp-items="ViewBag.Character"></select>
                <span asp-validation-for="RaidAttendance.CharacterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaidAttendance.RaidDay" class="control-label"></label>
                <input asp-for="RaidAttendance.RaidDay" class="form-control" />
                <span asp-validation-for="RaidAttendance.RaidDay" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RaidAttendance.SignedUp" /> @Html.DisplayNameFor(model => model.RaidAttendance.SignedUp)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RaidAttendance.Attendance" /> @Html.DisplayNameFor(model => model.RaidAttendance.Attendance)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RaidAttendance.AttendanceCount" class="control-label"></label>
                <input asp-for="RaidAttendance.AttendanceCount" class="form-control" />
                <span asp-validation-for="RaidAttendance.AttendanceCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
